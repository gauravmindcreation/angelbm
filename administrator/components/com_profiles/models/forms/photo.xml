<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
                    readonly="true" class="readonly"
                    description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="family_id" type="user" size="20" class="inputbox"
                 label="COM_PROFILES_FORM_LBL_PHOTO_FAMILY_ID" description="COM_PROFILES_FORM_DESC_PHOTO_FAMILY_ID" 
                
                 required="true" 
                filter="safehtml" /> 

       <field name="path" type="file" size="40" class="inputbox"
                 label="COM_PROFILES_FORM_LBL_PHOTO_PATH" description="COM_PROFILES_FORM_DESC_PHOTO_PATH" 
                
                
                filter="safehtml" /> 

         <field
                name="state"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                class="inputbox"
                size="1"
                default="1">
                <option value="1">JPUBLISHED</option>
                <option value="0">JUNPUBLISHED</option>
            </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
                <field name="checked_out_time" type="hidden" filter="unset" />

	</fieldset>

</form>
